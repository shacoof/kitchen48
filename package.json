{
  "name": "kitchen48",
  "version": "0.1.0",
  "private": true,
  "description": "Kitchen48 - A cooking application",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev:kill && npm run db:start && npm run dev:frontend & npm run dev:backend",
    "dev:kill": "fuser -k 3000/tcp 5173/tcp 5174/tcp 5175/tcp 5176/tcp 2>/dev/null || true",
    "dev:stop": "npm run dev:kill",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "db:start": "./scripts/ensure-db.sh",
    "db:stop": "docker compose down",
    "db:logs": "docker compose logs -f postgres"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
